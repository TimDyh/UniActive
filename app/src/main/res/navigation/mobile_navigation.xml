<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_plaza"
        android:name="com.example.uniactive.ui.plaza.PlazaFragment"
        android:label="@string/title_plaza"
        tools:layout="@layout/fragment_plaza" />

    <fragment
        android:id="@+id/navigation_schedule"
        android:name="com.example.uniactive.ui.schedule.ScheduleFragment"
        android:label="@string/title_schedule"
        tools:layout="@layout/fragment_schedule" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.uniactive.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />
